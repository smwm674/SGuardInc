<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:background="?android:attr/selectableItemBackground"    android:clickable="true"    android:focusable="true"    android:orientation="vertical"    android:padding="5dp"    android:paddingLeft="@dimen/activity_horizontal_margin"    android:paddingTop="@dimen/row_padding_vertical"    android:paddingRight="@dimen/activity_horizontal_margin"    android:paddingBottom="@dimen/row_padding_vertical"    android:id="@+id/main">    <ImageView        android:id="@+id/imageView"        android:layout_width="100dp"        android:layout_height="90dp"        android:src="@drawable/ifour"        android:scaleType="fitXY" />    <TextView        android:id="@+id/name"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginLeft="5dp"        android:layout_toRightOf="@id/imageView"        android:text="Name:"        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"        android:textColor="#000000" />    <TextView        android:id="@+id/email"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_below="@id/name"        android:layout_marginLeft="5dp"        android:layout_marginTop="5dp"        android:layout_toRightOf="@id/imageView"        android:text="Email:"        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />    <TextView        android:id="@+id/dob"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_below="@id/email"        android:layout_marginLeft="5dp"        android:layout_marginTop="5dp"        android:layout_toRightOf="@id/imageView"        android:text="Date Of Birth:"        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />    <TextView        android:id="@+id/status"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_below="@id/dob"        android:layout_marginLeft="5dp"        android:layout_marginTop="5dp"        android:layout_toRightOf="@id/imageView"        android:text="UserName:"        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" /></RelativeLayout>