<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminPrices">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/home_actionbar"
        android:titleTextColor="@color/black"
        app:popupTheme="@style/AtionBar.PopupOverlay" />

    <LinearLayout
        android:layout_below="@+id/toolbar"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".AdminHome"
        tools:showIn="@layout/app_bar_admin">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Base Fair"
            android:textColor="@color/blue" />

        <EditText
            android:id="@+id/basefair"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Base Fair" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Per Mile"
            android:textColor="@color/blue" />

        <EditText
            android:id="@+id/permile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Per Mile" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Per Hour"
            android:textColor="@color/blue" />

        <EditText
            android:id="@+id/perhour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginTop="10dp"
            android:hint="Per Hour" />
